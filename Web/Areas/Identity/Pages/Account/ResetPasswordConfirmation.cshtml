@page
@model ResetPasswordConfirmationModel
@{
  ViewData["Title"] = "Reset password confirmation";
	ViewData["AppSidebarNone"] = "true";
	ViewData["AppHeaderNone"] = "true";
	ViewData["AppBodyClass"] = "pace-top";
	ViewData["AppContentClass"] = "p-0";
	ViewData["AppClass"] = "app-without-sidebar app-without-header app-content-full-height";
}

<div class="vh-100 d-flex align-items-center">
	<div class="container-sm p-5 mb-5">
		<div class="row justify-content-center">
			<div class="col-lg-6 col-md-6">
				<h2 class="text-center">@ViewData["Title"]</h2>
				<h6 class="text-center text-gray-600 lh-15 mb-5 pb-5">
					Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
				</h6>
			</div>
		</div>
	</div>
</div>