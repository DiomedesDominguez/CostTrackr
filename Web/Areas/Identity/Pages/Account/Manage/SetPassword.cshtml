@page
@model SetPasswordModel
@{
	ViewData["Title"] = "Set password";
	ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="mb-3">Set your password</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
	You do not have a local username/password for this site. Add a local
	account so you can log in without an external login.
</p>
<div class="row">
	<div class="col-md-6">
		<form id="set-password-form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-red-700 fw-bold"></div>
			<div class="form-group">
				<label asp-for="Input.NewPassword"></label> <span class="text-danger">*</span>
				<input asp-for="Input.NewPassword" class="form-control" />
				<div class="mt-1"><span asp-validation-for="Input.NewPassword" class="text-red-700 fw-bold"></span></div>
			</div>
			<div class="form-group">
				<label asp-for="Input.ConfirmPassword"></label> <span class="text-danger">*</span>
				<input asp-for="Input.ConfirmPassword" class="form-control" />
				<div class="mt-1"><span asp-validation-for="Input.ConfirmPassword" class="text-red-700 fw-bold"></span></div>
			</div>
			<button type="submit" class="btn btn-primary">Set password</button>
		</form>
	</div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}