@page
@model ResetPasswordModel
@{
  ViewData["Title"] = "Reset password";
	ViewData["AppSidebarNone"] = "true";
	ViewData["AppHeaderNone"] = "true";
	ViewData["AppBodyClass"] = "pace-top";
	ViewData["AppContentClass"] = "p-0";
	ViewData["AppClass"] = "app-without-sidebar app-without-header app-content-full-height";
}

<div class="vh-100 d-flex align-items-center">
	<div class="container-sm p-5 mb-5">
		<div class="row justify-content-center">
			<div class="col-lg-6 col-md-6">
				<h2 class="text-center">@ViewData["Title"]</h2>
				<h6 class="text-center text-gray-600 lh-15 mb-3">Reset your password.</h6>
				<form method="post">
					<div asp-validation-summary="ModelOnly" class="text-red-700 fw-bold"></div>
					<input asp-for="Input.Code" type="hidden" />
					<div class="mb-3">
						<label asp-for="Input.Email" class="form-label"></label> <span class="text-danger">*</span>
						<input asp-for="Input.Email" class="form-control form-control-lg fs-13px" />
						<div class="mt-1"><span asp-validation-for="Input.Email" class="text-red-700 fw-bold"></span></div>
					</div>
					<div class="mb-3">
						<label asp-for="Input.Password" class="form-label"></label> <span class="text-danger">*</span>
						<input asp-for="Input.Password" class="form-control form-control-lg fs-13px" />
						<div class="mt-1"><span asp-validation-for="Input.Password" class="text-red-700 fw-bold"></span></div>
					</div>
					<div class="mb-3">
						<label asp-for="Input.ConfirmPassword" class="form-label"></label> <span class="text-danger">*</span>
						<input asp-for="Input.ConfirmPassword" class="form-control form-control-lg fs-13px" />
						<div class="mt-1"><span asp-validation-for="Input.ConfirmPassword" class="text-red-700 fw-bold"></span></div>
					</div>
					<button type="submit" class="btn btn-primary">Reset</button>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
